{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "skillmaster-app",
  "version": "0.1.0",
  "identifier": "com.skillmaster.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "skillmaster-app",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "useLocalToolsDir": true
  },
  "commands": ["read_text", "write_text", "build_index"]
}
